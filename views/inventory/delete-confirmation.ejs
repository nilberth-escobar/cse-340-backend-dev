<% if (title) { %>
    <h1><%- title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div class="form-container">
    <p>Confirm Deletion - The delete is permanent.</p>
    <form action="/inv/delete/" method="post">
        <div class="form-group">
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" readonly value="<%= locals.inv_make %>">
        </div>
        <div class="form-group">
            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" readonly value="<%= locals.inv_model %>">
        </div>
        <div class="form-group">
            <label for="inv_year">Year:</label>
            <input type="number" id="inv_year" name="inv_year" readonly value="<%= locals.inv_year %>">
        </div>
        <div class="form-group">
            <label for="inv_price">Price:</label>
            <input type="number" id="inv_price" name="inv_price" readonly value="<%= locals.inv_price %>">
        </div>
        <div class="form-group">
            <button type="submit" class="form-btn">Delete Vehicle</button>
        </div>
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>
